<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="@color/colorSecondary" tools:context=".MainActivity">

    <TextView android:id="@+id/txt_title_main" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="18dp" android:textStyle="bold" android:textColor="@android:color/white" android:textAlignment="center" android:gravity="center" android:background="@color/colorPrimary" android:minHeight="?attr/actionBarSize"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
        <android.support.v7.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="50dp" android:orientation="vertical" android:gravity="center">
                <Button android:id="@+id/btn_materi" android:layout_width="186dp" android:layout_height="60dp" android:layout_marginBottom="10dp" android:text="Materi" android:textColor="@android:color/white" android:background="@drawable/bg_button_green"/>
                <Button android:id="@+id/btn_quiz" android:layout_width="186dp" android:layout_height="60dp" android:layout_marginBottom="10dp" android:text="quiz" android:textColor="@android:color/white" android:background="@drawable/bg_button_green"/>
                <Button android:id="@+id/btn_about" android:layout_width="186dp" android:layout_height="60dp" android:layout_marginBottom="10dp" android:text="About" android:textColor="@android:color/white" android:background="@drawable/bg_button_green"/>
                <Button android:id="@+id/btn_exit" android:layout_width="186dp" android:layout_height="60dp" android:layout_marginBottom="10dp" android:text="Exit" android:textColor="@android:color/white" android:background="@drawable/bg_button_green"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>